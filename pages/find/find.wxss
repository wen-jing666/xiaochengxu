.clearfix {
  overflow: hidden;
  zoom: 1;
}

.content {
  padding: 41rpx 0 150rpx 0;
  width: 750rpx;
  background: #fff;
}

.one-page {
  position: relative;
  float: left;
  margin: 0 0 66rpx 36rpx;
  width: 323rpx;
  box-shadow:0 0 8rpx rgba(233, 233, 233, .8);
}

.one-page-top {
  position: relative;
  width: 100%;
  height: 356rpx;
}

.one-page-top image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.one-page-bottom {
  padding: 28rpx 20rpx 15rpx 21rpx;
}

.one-page-bottom-left {
  float: left;
  width: 146rpx;
}

.one-page-bottom-left view:nth-of-type(1) {
  float: left;
  margin-bottom: 10rpx;
  width: 100%;
  font-size: 17rpx;
  color: #d33035;
}

.one-page-bottom-left view:nth-of-type(2) {
  width: 100%;
  font-size: 15rpx;
  color: #2e090a;
  float: left;
}

.one-page-bottom-right {
  float: right;
  width: 50rpx;
}

.one-page-bottom-right-portrait {
  margin-bottom: 6rpx;
  width: 50rpx;
  height: 50rpx;
}

.one-page-bottom-right-portrait image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.one-page-bottom-right-nickname {
  font-size: 9rpx;
  color: #000;
  text-align: center;
}
.one-page-icon-border{
  position: absolute;
  left: 0;  
  bottom: 0;
  width: 323rpx;
  height: 8rpx;
  z-index: 3;
}
.one-page-icon-border image{
  width: 100%;
  height: 100%;
}




