.clearfix {
  overflow: hidden;
  zoom: 1;
}

page {
  background: #efefef;
}

.detail-banner {
  margin-top: 20rpx;
  width: 100%;
}

.detail-banner image {
  width: 100%;
}

.detail-cont {
  margin-top: 20rpx;
  background: #fff;
}

.cont, .other-cont {
  margin: 0 auto;
  padding-bottom: 35rpx;
  width: 92%;
}

.cont-head image {
  float: left;
  width: 62rpx;
  height: 62rpx;
  border-radius: 50%;
}

.cont-head view:nth-child(2) {
  float: left;
  margin-left: 10rpx;
  font-size: 23rpx;
  line-height: 62rpx;
}

.cont-head view:nth-child(3) {
  float: right;
  margin-top: 7rpx;
  width: 122rpx;
  height: 48rpx;
  background: #000;
  font-size: 22rpx;
  color: #fff;
  text-align: center;
  line-height: 48rpx;
}

.cont-tlt {
  margin-top: 50rpx;
  font-size: 28rpx;
}

.cont-text {
  margin-top: 50rpx;
  font-size: 24rpx;
  line-height: 40rpx;
}

.detail-other {
  margin-top: 20rpx;
  padding-bottom: 110rpx;
  width: 100%;
  background: #fff;
}

.other-tlt {
  padding-top: 35rpx;
  font-size: 20rpx;
  color: #bababa;
}

.other-cont-detail {
  margin-top: 35rpx;
}

.cont-detail-left {
  float: left;
  width: 199rpx;
  height: 193rpx;
}

.cont-detail-left image {
  width: 100%;
  height: 100%;
}

.cont-detail-right {
  float: right;
  width: 65%;
}

.cont-detail-right view:nth-child(1) {
  margin: 10rpx 0 20rpx 0;
  font-size: 24rpx;
}

.cont-detail-right view:nth-child(2) {
  font-size: 21rpx;
  height: 90rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.detail-comment{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #FFF;
}

.comment-cont{
  margin: 10rpx auto 0;
  width: 92%;
}
.comment-cont-left{
  float: left;
  width: 60%;
  height: 70rpx;
  background: #fafafa;
}
.comment-cont-left input{
  margin: 10rpx 0 0 30rpx;
  font-size: 24rpx;
}

.comment-cont image:nth-child(2){
  float: left;
  margin: 20rpx 50rpx 0 25rpx;
  width: 41rpx;
  height: 35rpx;
}
.comment-cont image:nth-child(3){
  float: left;
  margin: 20rpx 50rpx 0 0;
  width: 41rpx;
  height: 38rpx;
}
.comment-cont image:nth-child(4){
  float: left;
  margin-top: 20rpx;
  width: 41rpx;
  height: 37rpx;
}

